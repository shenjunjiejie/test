<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DFMainDetectBtn">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:background">@drawable/app_home_start_btn_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/app_white</item>
        <item name="android:textSize">@dimen/app_default_text</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="DFHorizontalSplitLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/app_split_line</item>
    </style>

</resources>
