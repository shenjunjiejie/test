<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WithdrawActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="16sp"
            android:layout_height="12dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:background="@drawable/withdrawl_or_repayment_banner"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="30dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash withdrawl amount"
                android:textColor="#ffffff"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/withdrawl_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs 1000"
                android:textSize="30sp"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/withdrawl_service_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Charge"
                android:textColor="#333333"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="30%"
                android:textColor="#333333"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/withdrawl_taxes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taxes"
                android:textColor="#333333"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="18%"
                android:textColor="#333333"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/withdrawl_interest_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interest Rate"
                android:textColor="#333333"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="0.01%"
                android:textColor="#333333"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/withdrawl_borrowing_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Borrowing Date"
                android:textColor="#333333"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="2020-11-23"
                android:textColor="#333333"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/withdrawl_repayment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repayment Date"
                android:textColor="#333333"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="2020-11-30"
                android:textColor="#333333"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/withdrawl_borrow_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Borrow account"
                android:textColor="#333333"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="Rs1000"
                android:textColor="#333333"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/withdrawl_repayment_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repayment Amount"
                android:textColor="#333333"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="Rs1000"
                android:textColor="#333333"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/withdrawl_apply"
                android:layout_width="191dp"
                android:layout_height="57dp"
                android:background="@drawable/apply_btn"
                android:text="APPLY"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:button="@null"
                android:background="@drawable/login_cb_bg"
                android:enabled="false"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I have read and agreed with the"
                    android:textColor="#999999"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Term and Condition"
                    android:textColor="#FF887C"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>