<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    android:gravity="center">
    <LinearLayout
        android:layout_width="256.5dp"
        android:layout_height="189.3dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You OTP is capture"
            android:layout_marginTop="27dp"
            android:textSize="14sp"
            android:textColor="#000000" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp">
            <EditText
                android:id="@+id/login_code_et"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="6"
                android:letterSpacing="1.08"
                android:background="@drawable/login_otp_et">
            </EditText>

        </LinearLayout>

        <Button
            android:id="@+id/login_submit"
            android:gravity="center"
            android:layout_width="108dp"
            android:layout_height="33dp"
            android:background="@drawable/main_apply_btn"
            android:layout_marginTop="26dp"
            android:textSize="14sp"
            android:textColor="@color/btn_font_default_color"
            android:text="SUBMIT" />

    </LinearLayout>

</LinearLayout>