<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/id_sv_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/id_rl_result_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/id_ll_result_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp">

                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="16dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_back"
                        android:contentDescription="@string/livenesslibrary_image_error" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/id_tv_result_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/title_color"
                    android:textSize="18sp" />

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/result_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_rl_result_top"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/id_tv_result_try_again"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:layout_below="@id/result_fragment_container"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/sel_result_try_again_button"
                android:gravity="center"
                android:text="@string/string_try_again"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:visibility="visible" />
        </RelativeLayout>

    </ScrollView>

</FrameLayout>